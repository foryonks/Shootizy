{
  "name": "shootizy",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arnogues/shootizy.git"
  },
  "bugs": {
    "url": "https://github.com/arnogues/shootizy/issues"
  },
  "engines": {
    "node": "10.15.x",
    "npm": "6.4.x"
  },
  "license": "ISC",
  "scripts": {
    "install": "lerna bootstrap",
    "start": "lerna run start --stream",
    "start-dev": "lerna run start --stream",
    "start-debug": "lerna run start-debug --stream",
    "start-production": "lerna run start-production --stream",
    "build": "lerna run build",
    "init-db": "sh database-init.sh",
    "heroku-remote": "lerna run start-heroku-server --stream",
    "dev-publish": "git push dev develop",
    "mergedevelop": "git checkout develop && git merge - --squash"
  },
  "dependencies": {
    "express-fileupload": "^1.1.6",
    "fecha": "^3.0.3",
    "husky": "^4.0.3",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "numeral": "^2.0.6",
    "prettier": "^1.19.1",
    "react-google-recaptcha": "^2.0.1",
    "sharp": "^0.23.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,scss,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
